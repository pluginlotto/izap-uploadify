<?xml version="1.0" encoding="UTF-8"?>
<plugin_manifest xmlns="http://www.elgg.org/plugin_manifest/1.8">
  <name>iZAP Progress bar for file uploads</name>
  <author>iZAP Team</author>
  <version>2.0</version>
  <blurb>Displayes file upload progress bar.</blurb>
  <description>
    This plugin provides input view for replacement of "input/file", i.e. "input/izap-uploadify".
    You have to call the view on the form where progress bar is needed.
  </description>
  <website>http://www.pluginlotto.com/pg/store</website>
  <copyright>(C) iZAP Web Solutions</copyright>
  <license>GNU Public License version 3</license>

  <requires>
    <type>elgg_version</type>
    <version>2011010401</version>
  </requires>

  <requires>
    <type>plugin</type>
    <name>izap-elgg-bridge</name>
    <version>2.0</version>
  </requires>

  <requires>
    <type>php_extension</type>
    <name>uploadprogress</name>
  </requires>

  <requires>
    <type>priority</type>
    <plugin>izap-elgg-bridge</plugin>
    <priority>after</priority>
  </requires>

  <category>Media</category>
  <admin_interface>advanced</admin_interface>

</plugin_manifest>